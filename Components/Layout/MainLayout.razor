@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider 
    FullWidth="true"
    MaxWidth="MaxWidth.Small"
    CloseButton="true"
    DisableBackdropClick="true"
    NoHeader="false"
    Position="DialogPosition.Center"
    CloseOnEscapeKey="true"
/>
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Info">
        <MudStack Row="true" Justify="Justify.SpaceAround" Style="width: 100%">
            <MudLink Color="Color.Primary">Home</MudLink>

            @if (/*userIsAdmin*/ true)
            {
                <MudLink>Admin</MudLink>
            }
            
        </MudStack>
    </MudAppBar>

    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
